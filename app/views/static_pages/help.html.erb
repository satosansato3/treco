<main class="home-main-size">
  <section>
    <div class="container d-flex justify-content-center">
      <div class="col-5 px-5 flex-fill align-self-center">
        <h2>お問い合わせ</h2>
        <%= form_for(:session, url: login_path) do |f| %>
          <%= f.email_field :email, placeholder: "メールアドレス", class: "form-control my-4" %>        
          <%= f.password_field :password, placeholder: "パスワード", class: "form-control mb-4" %>
          <%= f.submit "ログイン", class: "btn btn-primary w-100" %>
        <% end %>
        <div class="mt-2 text-right">
          <%= link_to "新規登録する", root_path %>
        </div>
      </div>
    </div>
  </section>
</main>
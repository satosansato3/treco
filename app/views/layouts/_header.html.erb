<header class="header">
  <div class="container-fluid px-0 content-bg h-100">
    <nav class="navbar navbar-expand-md navbar-light py-0">
      <%= link_to "Treco", root_path, class: "navbar-brand py-0 content-brand-size" %>
      <button class="navbar-toggler" data-toggle="collapse"
       data-target="#menu">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div id="menu" class="collapse navbar-collapse justify-content-end">
        <ul class="navbar-nav">
          <% if logged_in? %>
            <li class="nav-item"><span class="nav-link text-dark mx-1 h6 mb-0"><%= current_user.name %></span></li>
          <% end %>
          <li class="nav-item"><%= link_to "お問い合わせ", help_path,  class: "nav-link text-dark mx-1 h6 mb-0" %></li>
          <% if logged_in? %>
            <li class="nav-item"><%= link_to "ログアウト", logout_path, method: :delete, class: "nav-link text-dark mx-1 h6 mb-0" %></li>
          <% else  %>
            <li class="nav-item"><%= link_to "ログイン", login_path, class: "nav-link text-dark mx-1 h6 mb-0" %></li>
          <% end %>
        </ul> 
      </div>
    </nav>
  </div>
</header>
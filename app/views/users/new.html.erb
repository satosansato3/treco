<main class="home-bg home-main-size">
  <section>
    <div class="container home-bg d-flex">
      <div class="col-8 flex-fill align-self-center">
        <div class="mb-4">
          <h1 class="pl-5">Treco で自分のベストを</h1>
          <h1 class="pl-5">更新しよう</h1>            
        </div>
        <div>
          <h4 class="pl-5">Treco はあなたのトレーニング内容を</h4>
          <h4 class="pl-5">記録するノートです。</h4>    
        </div>
      </div>
      <div class="col-4 px-5 flex-fill align-self-center" id="signup-form">
        <h2>新規登録</h2>
        <%= render 'shared/model_error_messages' %>
        <%= form_for(@user, url: root_path) do |f| %>
          <%= f.text_field :name, placeholder: "ニックネーム", class: "form-control my-4" %>
          <%= f.email_field :email, placeholder: "メールアドレス", class: "form-control mb-4" %>        
          <%= f.password_field :password, placeholder: "パスワード", class: "form-control mb-4" %>
          <%= f.submit "登録する", class: "btn btn-primary w-100" %>
        <% end %>
      </div>
      <div class="col-4 px-5 flex-fill align-self-center" id="login-form">
        <h2>ログイン</h2>
        <%= form_for(:session, url: login_path) do |f| %>
          <%= f.email_field :email, placeholder: "メールアドレス", class: "form-control my-4" %>        
          <%= f.password_field :password, placeholder: "パスワード", class: "form-control mb-4" %>
          <%= f.submit "ログイン", class: "btn btn-primary w-100" %>
        <% end %>
      </div>
    </div>
  </section>
</main>

